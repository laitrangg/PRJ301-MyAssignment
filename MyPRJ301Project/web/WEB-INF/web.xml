<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TimetableController</servlet-name>
        <servlet-class>controller.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendController</servlet-name>
        <servlet-class>controller.TakeAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusAttendController</servlet-name>
        <servlet-class>controller.StatusAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimetableStudentController</servlet-name>
        <servlet-class>controller.student.TimetableStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeStudentController</servlet-name>
        <servlet-class>controller.student.HomeStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceStudentController</servlet-name>
        <servlet-class>controller.student.AttendanceStudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendController</servlet-name>
        <url-pattern>/lecturer/takeatt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusAttendController</servlet-name>
        <url-pattern>/lecturer/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimetableStudent</servlet-name>
        <url-pattern>/student/timetablestu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeStudentController</servlet-name>
        <url-pattern>/homestu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceStudentController</servlet-name>
        <url-pattern>/student/status</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>